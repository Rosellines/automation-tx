# ==========================================
# Gas Configuration
# ==========================================
GAS_MULTIPLIER=1.2
MAX_GAS_PRICE=1000000000

# ==========================================
# Retry Configuration
# ==========================================
MAX_RETRIES=3
RETRY_DELAY=5000

# ==========================================
# Loop Control
# ==========================================
# Set to 0 for infinite loop, or specific number for limited iterations
LOOP_LIMIT=0

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=info
